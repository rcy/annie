<html>
  <head>
    <style>
     .nowrap {
         white-space: nowrap;
     }
    </style>
  </head>
  <body>
    <div>
      <a href="/">all</a>
      {{range .nicks}}
        <a href="?nick={{.Nick}}">{{.Nick}}</a>
      {{end}}
    </div>

    <table>
      {{range .notes}}
        <tr>
          <td class="nowrap">
            {{.CreatedAt}}
          </td>
          <td>
            {{.Nick}}
          </td>
          <td>
            {{if eq .Kind "link"}}
              <a href="{{.Text}}">{{.Text}}</a>
            {{else}}
              {{.Text}}
            {{end}}
          </td>
        </tr>
      {{end}}
    </table>
  </body>
</html>
